<?xml version='1.0' encoding='utf-8'?>
<widget id="com.toughra.ustadmobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UstadMobile</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <access subdomains="true" uri="*" origin="*" />
    <preference name="websecurity" value="disable" /> <!--Default: enable: Dev only! -->
    <rim:permissions>
        <rim:permit>access_shared</rim:permit>
    </rim:permissions>
</widget>
